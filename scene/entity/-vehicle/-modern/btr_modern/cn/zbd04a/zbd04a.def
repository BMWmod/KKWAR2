;Created by Pheonix
{ArmoredCar 
	(include "/properties/tank_amph.ext")
	(include "/properties/shadow/tank.inc"  scale(1.2))
	(include "/properties/selection/vehicle.inc"  scale(1.2))
	
	{collider "tank.light"}
	{props "light_M" "turret_rotator" "amphibia" "vision_lev04" "has_autoloader" "cw_panorama" "laser_spo" "5_barrels_smoke"}
	{PatherID "amphibia"}
    {targetClass "light_tank"}

	{extension "crew.ext"}
	{extender "enumerator" {digit_folder "pla"}}

	("armor_IFV" turret(25 35 15 6) body(35 20 10 6))
	{volume "apploque_front"	{Thickness 15} {able clear {BLAST 0}}}
	{volume "apploque_side1"	{Thickness 4} {able clear {BLAST 0}}}
	{volume "apploque_side2"	{Thickness 4} {able clear {BLAST 0}}}
	{armor
		{setting "apploque_front"
			{thickness 15}		
			{durability {blast {value 100}} {pierce {koef 999}}}
			{threshold {blast {koef 2} {value 50}}}
			{volumes "apploque_front*"}
			{health_reducing {pierce {koef 0.0001}} {blast {koef 0.0001}} }
		}
		{setting "apploque_side"
			{thickness 4}		
			{durability {blast {value 100}} {pierce {koef 999}}}
			{threshold {blast {koef 2} {value 50}}}
			{volumes "apploque_side*"}
			{health_reducing {pierce {koef 0.0001}} {blast {koef 0.0001}} }
		}
	}


	{extender "shield"
		{on}
	}
	{component "shieldl1" {tags "shield"}} 
 	{component "shieldr1" {tags "shield"}} 
	{component "shieldl2" {tags "shield"}}
	{component "shieldr2" {tags "shield"}}
	{component "shieldl3" {tags "shield"}}
	{component "shieldr3" {tags "shield"}}
	{component "shieldl4" {tags "shield"}}
	{component "shieldr4" {tags "shield"}}
	{component "shieldl5" {tags "shield"}}
	{component "shieldr5" {tags "shield"}}

	("shield_t-64a_1981")

	{extender "inventory"
		{box
			{item "ammo pkm_ammo" 2000}		
			{item "ammo bullet100a_RUS rok" 3}	
			{item "ammo bullet30_RUS apcr_cn ap" 170}
			{item "ammo bullet30_RUS fg_cn fg" 300}
			{item "ammo bullet100a_RUS fg" 21}
			;{item "ammo smoke_shtora" 10}	
			{item "pf89b weapon" 4 filling "pf89b_ammo ammo" 1}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{weapon "100mm_2a70" filling "ammo bullet100a_RUS fg" 1}
			{gunner "gunner"}
			{charger "gunner"}
			("CW_stab_abm" abm(0.68))
			("CW_stab_ld_suo")
			{basic}
		}
		{place "gun1"
			{RestoreIKAfterAim}
			{weapon "30mm_2A72" filling "ammo bullet30_RUS apcr_cn ap" 30}
			{foresight "foresight6"}
			{gunner "gunner"}
			{charger "gunner"}
			{basic}
			("CW_stab_abm" abm(0.68))
			("CW_stab_ld_suo")
		}
		{place "mgun"
			{weapon "Type86_762mm" filled}
			{type "mgun_coaxial"}
			{foresight "foresight3"}
			{gunner "gunner"}
			{charger "gunner"}
			{basic}
			("CW_stab_abm" abm(0.84))
			("CW_stab_ld_suo")
		}
	}	
	{sensor
		{visor "panorama"
		    {bone "Visor3"}
			{vision "tank_gunner_optic_IR_2g"}
		}
		{visor "main"
		    {bone "Visor1"}
			{vision "tank_gunner_optic_IR_2g"}	;No info about the scope, it's not from BMP-3 or BMP-3M
		}
		{visor "mgun1"
			{vision "vehicle_main"}
		    {bone "Visor4"}
		}
		{visor "mgun2"
			{vision "vehicle_main"}
		    {bone "Visor5"}
		}
	}

	{mass 21000}	;It is said that ZBD-04A is about 25t, but volume measurements give valuse about 20-22t max.
	{Chassis
                ("tank_trace" fx("tracks_sm") step(0.15) len(0.45))
		{Locomotion ("CW_track_moveparam" 
			Mass(22)
			Width(3.2)
			Power(550)
			Realspeed(65)
			Gamespeed(41) 
		)}
		("CW_fuelbag" Range(500) Fuelvolume(600))
		("CW_speed_lev" Gamespeed(41))
	}
	{props "cwfs_fuel_600"}

	("CW_amphibia" Waterline(1.45) )
	("two_headlights")
	{Extension "zbd04a.mdl"}
	("missile_aimpoint_tanksize")
	("recoil_side_common")

	("cwts_buksir")
	("CW_turr_speed" deg_per_s(35))
}
