{ArmoredCar 
	(include "/properties/armoredcar.ext")
	(include "/properties/shadow/tank.inc"  scale(1.0))
	(include "/properties/selection/vehicle.inc"  scale(1.0))
	{props "vehicle" "tank" "armored_car_M" "turret" "wheeled" "with_gun" "vision_lev03" "8_wheels" "has_apu" "remote_turret" "4_barrels_smoke" "spall_liner"}
	{targetClass "armoredcar"}
	{extension "crew.ext"}

	("armor_btr" turret(15 15 10 8) body(19 19 19 1))
	
        ("shield_BMP2D")

	{extender "shield"
		{on}
	}
	{component "shieldl1" {tags "shield"}}
	{component "shieldl2" {tags "shield"}}
	{component "shieldl3" {tags "shield"}}
	{component "shieldl4" {tags "shield"}}
	{component "shieldr1" {tags "shield"}}
	{component "shieldr2" {tags "shield"}}
	{component "shieldr3" {tags "shield"}}
	{component "shieldr4" {tags "shield"}}

	{extender "inventory"
		{box
		    {item "ammo tow2b" 8}
			{item "ammo tow2e" 5}
			{item "ammo tow2_fg" 2}
			;{item "ammo smoke_shtora" 16}	
		}
	}

	{Weaponry
		{place "gun"
			{weapon "weapon TOWx2" filling "ammo tow2b" 2}
			{foresight "foresight1"}
			{barrels 2}
			{basic}
		}
	}
	
	{sensor
		{visor "main"
			{vision "tank_gunner_optic_IR_2g"}	
		}
		{visor "add_visor"
			{vision "tank_gunner_optic_IR_3g"}	
			{bone "visor3"}		
		}
	}	
	{mass 15000}
	{Chassis
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlr") wheelr("wrr") bonel("FXtraceL3") boner("FXtraceR3"))
		("CW_wheels"
			Mass(15)
			Turnradius(17.7)
			Power(350)
			Realspeed(100)
			Gamespeed(55) 
			Range(500)
			Fuelvolume(200)
		)

	}
	{props "cwfs_ext_only" "cwfs_extfuel_200"}

	("two_headlights")
	{Extension "m1134.mdl"}
	("missile_aimpoint_trucksize")

	("cwts_buksir")
	("CW_turr_speed" deg_per_s(60))
	{texmod "2"}
}

