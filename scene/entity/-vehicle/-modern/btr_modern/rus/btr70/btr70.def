			("CW_stab_no_stabiliser")
		}
		{place "mgun"
			{type "mgun_coaxial"}
			{charger "gunner"}
			{LinkAnimation "off"}
			{basic}
			("CW_stab_no_stabiliser")
		}
	}	
	{sensor
		{visor "main"
			{vision "tank_main-l"}
		}
	}

