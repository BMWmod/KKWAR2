{ArmoredCar 
	
	(include "/properties/armoredcar_amph.ext")		
	(include "/properties/shadow/tank.inc"  scale(1.0))
	(include "/properties/selection/vehicle.inc"  scale(1.0))
	{props "vehicle" "armored_car_M" "tank" "turret" "wheeled" "with_gun" "amphibia" "8_wheels" "skill_override_car"}
	{targetClass "armoredcar"}
	{targetSelector "tank"}
	{PatherID "amphibia"}

	{extender "enumerator"}
	{extension "crew.ext"}

	("armor_light_btr" turret(7 7 7 7) body(10 7 1 7))	;Волумы организованы так, что корма - 7, а 1 - только внутренние границы между волумами. 
	
;В игре смоделирован БТР-60 с башней, это может быть только БТР-60ПБ обр. 1965 г.



	
	{extender "inventory"
		{weapon "mgun"
			{mask "weapon link_mmg"}
		}
		{box
			{item "ammo kpvt_ammo" 380 }
			{item "ammo kpvt_mdz" 80 }
			{item "ammo pkm_ammo" 1750}
			{item "pkt" filled {user "mgun"}}
			
		}
	}
	{Weaponry
		{place "gun"
			{weapon "kpvt" filling "ammo kpvt_ammo" 40}
			{charger "gunner"}
			("CW_stab_no_stabiliser")
		}
		{place "mgun"
			{type "mgun_coaxial"}
			{charger "gunner"}
			{LinkAnimation "off"}
			{basic}
			("CW_stab_no_stabiliser")
		}
	}	
	{sensor
		{visor "main"
			{vision "tank_main-l"}
		}
	}

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")
	("wheel" args "wheelright3")
	("wheel" args "wheelleft3")
	("wheel" args "wheelright4")
	("wheel" args "wheelleft4")

	{mass 10200}
	{Chassis
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL3") boner("FXtraceR3"))
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL4") boner("FXtraceR4"))
		("CW_wheels"
			Mass(10.2)
			Turnradius(12.1)
			Power(180)
			Realspeed(80)
			Gamespeed(47) 
			Range(500)
			Fuelvolume(290)
		)
	}
	{props "cwfs_fuel_200"}

	("CW_amphibia" Waterline(1.6) )
	("two_headlights")
	{Extension "btr60.mdl"}
	("missile_aimpoint_trucksize")

	("cwts_buksir")

	{bone "gun_rot"
		{speed 0.01}
		{limits -5 30}
	}
	("CW_turr_speed" deg_per_s(30))

}

