{ArmoredCar 
	(include "/properties/armoredcar.ext")		
	(include "/properties/shadow/tank.inc"  scale(1.0))
	(include "/properties/selection/vehicle.inc"  scale(1.0))
	{props "vehicle" "armored_car_M" "tank" "turret" "wheeled" "with_gun"  "vision_lev03" "ifvboxer" "boxer_lance" "cw_panorama" "8_wheels" "7_barrels_smoke" "spall_liner"}
	{targetClass "tank" "ap fg bullet"}
	{targetSelector "tank"}
	
	{extender "enumerator"}



        ("armor_btr" turret(20 16 16 5) body(27 43 5 20)) 
	{volume "apploque_front"	{Thickness 5}}
	{volume "apploque_front1"	{Thickness 5}}
	{armor
		{setting "appliquef"
			{thickness 5 5 5 5}		
			{durability {blast {value 100}} {pierce {koef 999}}}
			{threshold {blast {koef 2} {value 50}}}
			{volumes "apploque_front*"}
			{health_reducing {pierce {koef 0.0001}} {blast {koef 0.0001}} }
		}
	}
	{extender "inventory"				
		{box                  
			{item "ammo mk30abm apcr" 70}
			{item "ammo mk30abm_abm fg" 100}
			{item "ammo 762Nato" 900}
			{item "ammo 762Nato" 900}
			{item "nlaw weapon" 4 filled}	
		}
	}
	{Weaponry
		{place "gun"
			{weapon "30mm_Mk30_2" filling "ammo mk30abm apcr" 30}
			{charger "gunner"}
			{gunner "gunner"} 
			("CW_stab_abm" abm(0.71))	;Поставил стаб 0,3 т.д, информации нет. Для автопушки больше и не надо.
			("CW_stab_autotrack_suo")		
		}
		{place "mgun"
			{weapon "L94A1" filled}
			{type "mgun_coaxial"}
			{gunner "gunner"}
			{charger "gunner"}
			{foresight "foresight5"}
			{basic}
			("CW_stab_abm" abm(0.94))	
			("CW_stab_autotrack_suo")	
		}
	}	
	{sensor
		{visor "driver"
			{vision "tank_driver"}
			{bone "visor2"}
		}
		{visor "commander"
			{vision "tank_gunner_optic_IR_3g"}
			{bone "visor3"}
		}
		{visor "gunner"
			{vision "tank_gunner_optic_IR_3g"}
			{bone "visor1"}
		}
		{visor "cam1"		;back hull		
			{vision "vehicle_top_mgun"}
			{bone "Visor4"}
		}
		
		{visor "cam2"			;turret 180 daycam	
			{vision "vehicle_main_180"}
			{bone "Visor5"}
		}
		{visor "cam3"				;turret 360 IR cam
			{vision "vehicle_main_IR_360"}
			{bone "Visor6"}
		}

	}
