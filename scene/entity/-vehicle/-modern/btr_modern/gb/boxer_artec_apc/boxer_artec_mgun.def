{ArmoredCar 
	(include "/properties/armoredcar.ext")		
	(include "/properties/shadow/tank.inc"  scale(1.0))
	(include "/properties/selection/vehicle.inc"  scale(1.0))
	{props "vehicle" "armored_car_M" "tank" "turret" "wheeled" "vision_lev03" "ifvboxer" "8_wheels" "remote_mgun" "3_barrels_smoke" "spall_liner"}
	
	{targetClass "armoredcar_DUM"}
	
	{extender "enumerator"}



        ("armor_btr" turret(5 5 5 5) body(27 43 5 20)) 
	{volume "apploque_front"	{Thickness 5}}
	{volume "apploque_front1"	{Thickness 5}}
	{armor
		{setting "appliquef"
			{thickness 5 5 5 5}		
			{durability {blast {value 100}} {pierce {koef 999}}}
			{threshold {blast {koef 2} {value 50}}}
			{volumes "apploque_front*"}
			{health_reducing {pierce {koef 0.0001}} {blast {koef 0}} }
		}
	}
	{extender "inventory"				
		{box                  
			{item "ammo 50Nato" 400}	;https://en.wikipedia.org/wiki/FLW_remote_weapon_station#FLW_200
			;там у прохода к мехводу есть стеллаж, вроде бы для БК
			{item "nlaw weapon" 4 filled}

		}
	}
	{Weaponry
		{place "mgun"
			{type "mgun_aa"}
			{weapon "browning_m2hb" filled}
;			{weapon "hk_gmg" filled}
			{foresight "foresight3"}
			{linkbone "mgun2"}
;			{linkbone "gmg"}
			{gunner "gunner"}
			{charger "gunner"} 
			{basic}
			("CW_stab_abm" abm(0.92))
			("CW_stab_ld_suo")
		}
	}	
	{sensor
		{visor "driver"
			{vision "tank_driver"}
			{bone "visor2"}
		}

		{visor "gunner"
			{vision "tank_gunner_optic_IR_2g"}
			{bone "visor1"}
		}
		{visor "cam1"		;back hull		
			{vision "vehicle_top_mgun"}
			{bone "Visor4"}
		}
	}
;============================================================================================================
{extension "crew.ext"}

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")
	("wheel" args "wheelright3")
	("wheel" args "wheelleft3")
	("wheel" args "wheelright4")
	("wheel" args "wheelleft4")

	{mass 39000}
	{Chassis
        ("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
		("CW_wheels"
			Mass(33)
			Turnradius(16)
			Power(720)
			Realspeed(103)
			Gamespeed(56) 
			Range(1050)
			Fuelvolume(500)
		)
	}
	{props "cwfs_fuel_500"}


	("two_headlights")
	{Extension "boxer_artec_mgun.mdl"}
	("cwts_buksir")
    ("CW_turr_speed" deg_per_s(40))	;наугад

	("cw_suspension_8wheels" downmax(-5) upmax(2.5) r(0.63))


}


	