{ArmoredCar 
	(include "/properties/tank_amph.ext")
	(include "/properties/shadow/tank.inc"  scale(1.1))
	(include "/properties/selection/vehicle.inc"  scale(1.1))

	{collider "tank.light"}
	{props "light_M" "turret_rotator" "vision_lev03" "remote_mgun" "4_barrels_smoke" "spall_liner"}
	{PatherID "amphibia"}
	{targetClass "light_tank"}
	
	("armor_IFV" turret(7 7 7 7) body(14 7 7 7))
	
	{volume "body1"
		{tags "body"}
		{component "body"}
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
	}
	
	{extender "shield"
		{off}
	}


	{boarder
		{anm "driver"
			{forward	{begin	"board_tank_left"} {end "seat_m7_mgunner"} {base "open_driver"}}
			{reverse 	{end	"emit_tank_1_hold"} {base "open_driver" -1}}
		}
		{anm "commander"
			{forward	{begin	"board_tank_left"} {end "seat_m7_mgunner"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "gunner"
			{forward	{begin	"board_tank_left"} {end "seat_m7_mgunner"} {base "open_gunner"}}
			{reverse 	{end	"emit_tank_1_hold"} {base "open_gunner"}}
		}
		{anm "open_back"
			{forward	{begin	"board_sd222_driver"} {end "seat_passenger"} {base "open_back"}}   
			{reverse 	{end	"emit_body" 1} {base "open_back"}}
		}
	}

(define "crew_human"
	{placer
		{place "%place" {group "%group"}{turnoff {sensor} {shadow}}}
	}
	{boarder
		{door "%door"}
		{link "%door" "%place" {anm "%animation"} {forward putoff} {reverse puton}}
	}
)
{placer 
	{place "driver" {group "crew"} }
}
("crew_human" place(driver)		door(emit1) group(crew)		animation(driver)		visor(driver))
("crew_human" place(gunner)		door(emit2) group(crew)		animation(gunner)		visor(mgun))
("crew_human" place(commander)		door(emit3) group(crew)		animation(commander)		visor(driver))

("crew_human" place(seat1)	door(emit4) bone(seat01) animation(open_back) 	group(passengers))
("crew_human" place(seat2)	door(emit4) bone(seat02) animation(open_back)	group(passengers))
("crew_human" place(seat3)	door(emit4) bone(seat03) animation(open_back)	group(passengers))
("crew_human" place(seat4)	door(emit4) bone(seat04) animation(open_back)	group(passengers))


	{extender "inventory"
		{Box
			{item "ammo 762Nato" 3000}
			;{item "ammo smoke_shtora" 8}		
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "mgun"
			{weapon "L94A1" filled}
			{foresight "foresight3"}
			{gunner "gunner"}
			{charger "gunner"}  
			("CW_stab_no_stabiliser")
			{LinkBone "mgun_link"}
			{basic}
		}
	}

	{sensor
		{visor "mgun"
			{bone "visor2"}
			{vision "tank_gunner_optic_2g"}	;8х увеличение, вроде без ИК
		}
        {visor "driver"
			{bone "visor1"}
			{vision "tank_driver"}
		}
        {visor "add"
			{bone "visor3"}
			{vision "tank_driver"}
		}
        {visor "add1"
			{bone "visor4"}
			{vision "tank_driver"}
		}
	}
	
	{mass 8.17}
	{Chassis
        ("tank_trace" fx("tracks_sm") step(0.2) len(1.0))
		{Locomotion ("CW_track_moveparam" 
			Mass(8.17)
			Width(2.69)
			Power(190)
			Realspeed(90)
			Gamespeed(53) 
		)
		{RearGears			0.12 0.29 0.5 0.68 1}}
		("CW_fuelbag" Range(510) Fuelvolume(423))
		("CW_speed_lev" Gamespeed(53))
	}
	{props "cwfs_fuel_400"}

	("two_headlights")
	{Extension "fv103_spartan.mdl"}
	
	("missile_aimpoint_tanksize")
	("cwts_buksir")
	("CW_turr_speed" deg_per_s(35))
}

