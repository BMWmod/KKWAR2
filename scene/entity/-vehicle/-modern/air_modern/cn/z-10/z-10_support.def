{actor
	(include "/properties/helicopter_m.ext")
	{PatherID  "airborne"}
	(include "/properties/shadow/airborn.inc" scale(1.1))
	(include "/properties/selection/airborne.inc" scale(3.0))
	(include "/properties/car_crew.ext")
        {props "Helicopter_M" "steel" "vision_lev_heli" "heli_strike" "laser_spo" "IR_spo" "radar_spo" "z-10"}
	{Extension "z-10_support.mdl"}
	("missile_aimpoint_air")
	{targetClass 	"Helicopter"}

	{mass 7000}
;Корпус имеет бронирование в передней части, против 12,7мм. Конфигурация неизвестна, ставлю 10+3=13мм для передней части корпуса
{volume "body1"	{tags "body"}	{component "body"} {thickness 13}}
{volume "body"	{tags "body"}	{component "body"} {thickness 3}}
{volume "elevator1"	{tags "body"}	{component "body"} {thickness 3}}
{volume "elevator2"	{tags "body"}	{component "body"} {thickness 3}}
;Бронестекла в дополнение к кабине, против 7.62 (3+3 панель+3 кабина)
{volume "border2"	{thickness 3}}
{volume "border8"	{thickness 3}}
       	("part" args "elevator1")
       	("part" args "elevator2")
       	("part" args "retract_wheelr")
       	("part" args "retract_wheell")
       	("part" args "retract_wheelb")
       	("part" args "ptur1")
       	("part" args "ptur2")
       	("part" args "nar1")
       	("part" args "nar2")
       	("part" args "WingL")
       	("part" args "WingR")

("air_armor" main_rotor(12) tail_rotor(5) cabin(3) engine(8) mechanics(6) electronics(5) fuel(5))
	{extender "inventory"
		{box
			{Size 6 4}
			{weight 6000}
			{item "bullet23_115 ofzt zenite ammo" 250}	;боекомплект неизвестен, но ящик в носу не слишком большой.
			{item "bullet23_115 bzt zenite ammo" 100}
			{item "akd-10 ammo" 8}
			{item "brmi-90 ammo" 14}
		}
	}
	{Weaponry
		{place "gun"
			{weapon "23mm_23L" filling "ammo bullet23_115 bzt" 50}
			{charger "driver1"}
			{gunner "driver1"}
			{basic}
			{sequentialAim 0}
			{rotate}
		}
;===============Правое крыло
		{place "ptur2"
			{weapon "akd10x4_R" filled}
			{foresight "foresight2"}
			{charger "driver1"}
			{gunner "driver1"}
			{basic}
			{rotate}
		}
		{place "nar"
			{weapon "brmi90x14" filled}
			{foresight "foresight4"}
			{charger "driver1"}
			{gunner "driver1"}
			{barrels 14}
			{basic}
			{rotate}
		}

;==============Левое крыло
		{place "ptur1"
			{weapon "akd10x4_L" filled}
			{foresight "foresight3"}
			{charger "driver1"}
			{gunner "driver1"}
			{basic}
			{rotate}
		}
;================Оба крыла   ==
		
	}
	("CW_heli_chassis" 
	Maxspeed(55) turnRadius(23) Acc(3.68) Climb(2.94)
	Fuel(1834) Fuel_rate(2.30) Fuel_remain(1376))
	{props "cwfs_fuel_1500"}
		;После установки новых двигателей WZ-16 параметры маневренности будут превосходить Ми-28, 
		;но на данный момент они на уровне Ми-24В
	{Sensor
		{Visor "main"
			{vision "aircraft_optic_IR_3g"}	;нет данных
			{bone "visor2"}
		}
		{Visor "pilot"
			{vision "mp_soldier"}
			{bone "visor1"}
		}
	}

	{boarder
		{anm "driver1"
			{forward	{begin	"board_plane_left"} {end "seat_driver_car"} {base "open"}}
			{reverse 	{end	"board_plane_left" -1} {base "open" -1}}
		}
		{anm "driver"
			{forward	{begin	"board_plane_right"} {end "seat_driver_car"} {base "open1"}}
			{reverse 	{end	"board_plane_right" -1} {base "open1" -1}}
		}
	}

	{Placer
		{place "driver" {turnOff {targetable}}}			
		{place "driver1" {turnOff {targetable}}}			
	}	
	
	("crew_human" place(driver) bone(driver) door(emit1) animation(driver))
	("crew_human" place(driver1) bone(driver1) door(emit2) animation(driver1))

	{Volume "propeller"
		{able {visible 0}}
	}
        {bone "foresight_flare_1"
		{speed 1}
        }
        {bone "foresight_flare_1a"
		{speed 1}
        }
("CW_turr_speed" deg_per_s(80))	;нет данных, но пушка легкая, а подача БК - из корпуса.
("CW_gun_rot_speed" deg_per_s(80))		
	("two_headlights")
	}