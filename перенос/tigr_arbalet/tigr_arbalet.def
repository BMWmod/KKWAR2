{Entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc"  scale(1.0))
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	{collider "truck"}
	{PatherID  "vehicle.small"}
	{props "vehicle" "car" "wheeled" "4_wheels" "turn_over" "vision_lev03" "uaz-3907_mg" "armored_glass" "autotrack_suo"}
	{targetClass "tank" "cm ap fg bullet"}
	{targetSelector "tank"}
	{able "emit_on_attack"}
	;("armor_car_BR5_custom" mrap(15) mrap_val(80)) ; 6 кг ВВ под колесом только у тигр-6А. В моде 233014 СТС (только противопульное бронирование)
	("armor_car_STANAG2a")

	{mass 7080}

("crew_2_human") ; âîäèòåëü è êîìàíäèð
	("crew_human" place(gunner) bone(gunner) door(emit3)	animation(gunner)) ; ñòðåëîê
	("crew_human" place(seat0) bone(seat0) door(emit3)	animation(passenger2)) ;ïðàâûé  ïàñàæèð
	("crew_human" place(seat1) bone(seat1) door(emit4)	animation(passenger1)) ; ëåâûé
	("crew_human" place(seat2) bone(seat2) door(emit3)	animation(passenger2)) 
	("crew_human" place(seat3) bone(seat3) door(emit4)	animation(passenger1))
	

	{boarder
		{anm "driver"
			{forward	{begin	"board_Kubel_driver"} {end "seat_driver_car"} {base "doorleft"}}
			{reverse 	{end	"board_Kubel_driver" -1} {base "doorleft" -1}}
		}
		{anm "gunner"
			{forward	{begin	"board_LowTank_stand"} {end "seat_gunner_stand"}}
			{reverse 	{end	"emit_tank_1_hold" 1}}
		}
		{anm "commander"
			{forward	{begin	"board_Kubel_commander"} {end "seat_passenger"} {base "doorright"}}
			{reverse 	{end	"board_Kubel_commander" -1} {base "doorright" -1}}
		}
		{anm "passenger1"
			{forward	{begin	"board_Kubel_leftpassenger"} {end "seat_passenger"} {base "doorleft1"}}
			{reverse 	{end	"board_Kubel_leftpassenger" -1} {base "doorleft1" -1}}
		}
		{anm "passenger2"
			{forward	{begin	"board_Kubel_rightpassenger"} {end "seat_passenger"} {base "doorright1"}}
			{reverse 	{end	"board_Kubel_rightpassenger" -1} {base "doorright1" -1}}
		}
	}

	{placer
		{place "driver"		{group "crew"}}
		{place "commander"	{group "crew"}}
		{place "gunner"		{group "crew"}}
	}



	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")

    {component "gun2"        {RepairTime 15}    }
    {component "gun3"        {RepairTime 15}    }

	{sensor
		{visor "driver"
			{bone "visor2"}
			{vision "moto_crew"}
		}		
		{visor "main"
			{bone "visor1"}
			{vision "tank_gunner_optic_IR_2g"}	;примерно - не нашел описания данной турели
		}	
	}

	{extender "inventory"
		{weapon "mgun"
			{mask "weapon mgun"}
		}
		{box
			{item "hcb" filled {user "mgun"}}
			{item "ammo hcb_ammo" 500 }
			{item "ammo smoke_shtora" 4}	
		}
	}
	{extender "vision_mode"
		;only one {timer_object} is supported at the moment for vision_mode extender.
		{timer_object
			{tag		"thermal"}  ; -> only thermal, night or drone are supported right now
			{active_time	   36000}  ;Sec 
			{recharge_rate	  0.5}  ;Factor * game time -> only valid for type "recharge"
			;{cooldown		   10}  ;Sec -> Only valid for type "consume" or "switch"
			{type	     "recharge"}; -> only recharge, consume or switch are supported right now
	    }
	}

	{Weaponry
		{place "mgun"
			{type "mgun_coaxial"}
			{gunner "commander"}
			{charger "commander"}
			{LinkAnimation "off"}
			{Linkbone "mgun"}
			{basic}
			("CW_stab_no_stabiliser")
		}
		{place "mgun17"			;эти номера заняты под дым гранатометы
			{type "mgun_rear"}
			{weapon "2xsmokegun" filled}
			{gunner "commander"}
			{charger "commander"}
			{foresight "foresight17"}
			{barrels 2}
			{basic}
		}
		{place "mgun18"			;эти номера заняты под дым гранатометы
			{type "mgun_rear"}
			{weapon "2xsmokegun" filled}
			{gunner "commander"}
			{charger "commander"}
			{foresight "foresight18"}
			{barrels 2}
			{basic}
		}
	}

	{Chassis

		("CW_wheels"
			Mass(7.6)
			Turnradius(8.9)
			Power(279)
			Realspeed(125)
			Gamespeed(70) 
			Range(560)
			Fuelvolume(140)
		)
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
	}
	{props "cwfs_fuel_100"}

	("two_headlights")
	{Extension "tigr_arbalet.mdl"}
	("missile_aimpoint_tanksize")


	
}