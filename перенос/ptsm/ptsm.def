{ArmoredCar 
	(include "/properties/tank_amph.ext")
	(include "/properties/shadow/tank.inc"  scale(1.1))
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	
	{props "light_M" "amphibia" "vision_lev04" "transport_plane" "transport_ship" "ptsm" "t-64b"}

	{PatherID "amphibia"}
        {targetClass "light_tank"}

	{Volume "Vehicle" {able clear}}


	("armor_medium" turret(10 10 10 10) body(10 10 10 6))
	("armor_engine"  t(15 15 15 15))

;===================================================================

	{boarder
		{anm "driver"
			{forward	{begin	"board_tank_left"} {end "seat_driver_car"} {base"doorleft"}}
			{reverse 	{end	"emit_tank_1_hold"} {base"doorleft"}}
		}
		{anm "commander"
			{forward	{begin	"board_tank_right"} {end "pose_stand_empty_1"}} 
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "passenger"
			{forward	{begin	"board_sd222_driver"} {end "pose_stand_empty_1"}}   
			{reverse 	{end	"emit_body" 1}}
		}
	}

(define "crew_human"
	{placer
		{place "%place" {group "%group"} {linkbone "%bone"} {turnoff {sensor} {shadow}}}
	}
	{boarder
		{door "%door"}
		{link "%door" "%place" {anm "%animation"} {forward putoff} {reverse puton}}
	}
)

("crew_human" place(driver)	door(emit1) bone(driver) animation(driver) 		group(crew))
