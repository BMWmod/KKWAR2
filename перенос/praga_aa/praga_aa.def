{game_entity
	(include "/properties/armoredcar.ext")	
	(include "/properties/shadow/tank.inc"  scale(1.0))
	(include "/properties/selection/vehicle.inc"  scale(1.0))
	
	{props "vehicle" "armored_car_M" "turret" "wheeled" "with_gun" "vision_lev03" "6_wheels" "sam"}

	{targetSelector "missile"}

	{extender "enumerator"}

	("armor_light_btr" turret(5 5 5 5) body(10 10 10 8))

	{Volume "Body1"
		{tags "body"}
		{component "body"}
	}
	{Volume "Body2"
		{tags "body"}
		{component "body"}
	}
	{Volume "Body3"
		{tags "body"}
		{component "body"}
	}
	{Volume "turret1"
		{tags "turret"}
		{component "turret"}
	}
	{Volume "turret2"
		{tags "turret"}
		{component "turret"}
	}

	
;===================================================================

	{boarder
		{anm "driver"
			{forward	{begin	"board_Kubel_driver"} {end "seat_driver_car"} {base "doorleft"}}
			{reverse 	{end	"board_Kubel_driver" -1} {base "doorleft" -1}}
		}
		{anm "commander"
			{forward	{begin	"board_Kubel_commander"} {end "seat_passenger"} {base "doorright"}}
			{reverse 	{end	"board_Kubel_commander" -1} {base "doorright" -1}}
		}
		{anm "gunner"
			{forward	{begin	"board_tank_right"} {end "seat_passenger"}}
			{reverse 	{end	"board_tank_right" -1}}
		}
	}
	


(define "crew_human"
	{placer
		{place "%place" {group "%group"} {visor "%visor"}}
	}
	{boarder
		{door "%door"}
		{link "%door" "%place" {anm "%animation"} {forward putoff} {reverse puton}}
	}
)

("crew_human" place(driver)		animation(driver)	door(emit1))
("crew_human" place(commander)		animation(commander)	door(emit2))
("crew_human" place(gunner)		animation(gunner)	door(emit3))


;===================================================================

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")
	("wheel" args "wheelright3")
	("wheel" args "wheelleft3")

;===================================================================

	{extender "inventory"
		{Box
			{Size 9 7}
			
			{item "rl_2 ammo" 4}
			{item "netting_kit" 1}
			
		}
	}
	
;===================================================================
	
	{Weaponry
		{place "gun"
			{weapon "rl_2_x2" filled}
			{foresight "foresight1"}
			{charger "gunner"}
			{gunner "gunner"}
			{shooter "none"}
			{Barrels 2}			
			{basic}
			{RestoreIKAfterAim}
		;	{StationaryFiring}
		}
	}

;===================================================================

	{Sensor
		{visor "main"
			{vision "vehicle_main"}
		}
		{Visor "driver"
			{vision "tank_driver"}
			{bone "Visor1"}
		}
		{Visor "gunner"
			{vision "tank_gunner_optic_IR_3g"}
			{bone "Visor2"}
		}
	}


;===================================================================


	
	{mass 11000}
	{Chassis
		("CW_wheels"
			Mass(11)
			Turnradius(10)
			Power(110)
			Realspeed(60)
			Gamespeed(37) 
			Range(500)
			Fuelvolume(250)
		)
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel03") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
	}
	{props "cwfs_fuel_200"}
	

	
	("two_headlights")
	
	{Extension "praga_aa.mdl"}
	("missile_aimpoint_trucksize")
	("CW_turr_speed" deg_per_s(30))
}